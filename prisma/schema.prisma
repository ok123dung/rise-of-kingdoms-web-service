generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id                  String               @id @default(cuid())
  email               String               @unique
  password            String
  phone               String?
  fullName            String               @map("full_name")
  discordUsername     String?              @map("discord_username")
  discordId           String?              @map("discord_id")
  rokPlayerId         String?              @map("rok_player_id")
  rokKingdom          String?              @map("rok_kingdom")
  rokPower            BigInt?              @map("rok_power")
  preferredLanguage   String               @default("vi") @map("preferred_language")
  timezone            String               @default("Asia/Ho_Chi_Minh")
  status              String               @default("active")
  emailVerified       DateTime?            @map("email_verified")
  lastLogin           DateTime?            @map("last_login")
  createdAt           DateTime             @default(now()) @map("created_at")
  updatedAt           DateTime             @updatedAt @map("updated_at")
  accounts            Account[]
  auditLogs           AuditLog[]
  bookings            Booking[]
  communications      Communication[]
  fileUploads         FileUpload[]
  leads               Lead[]
  passwordHistory     PasswordHistory[]
  passwordResetTokens PasswordResetToken[]
  serviceTasks        ServiceTask[]
  sessions            Session[]
  staffProfile        Staff?
  twoFactorAuth       TwoFactorAuth?

  @@map("users")
}

model Service {
  id               String        @id @default(cuid())
  name             String
  slug             String        @unique
  description      String?
  shortDescription String?       @map("short_description")
  basePrice        Decimal       @map("base_price") @db.Decimal(12, 2)
  currency         String        @default("VND")
  category         String?
  isActive         Boolean       @default(true) @map("is_active")
  isFeatured       Boolean       @default(false) @map("is_featured")
  sortOrder        Int           @default(0) @map("sort_order")
  metadata         Json?
  createdAt        DateTime      @default(now()) @map("created_at")
  updatedAt        DateTime      @updatedAt @map("updated_at")
  serviceTiers     ServiceTier[]

  @@map("services")
}

model ServiceTier {
  id               String    @id @default(cuid())
  serviceId        String    @map("service_id")
  name             String
  slug             String
  price            Decimal   @db.Decimal(12, 2)
  originalPrice    Decimal?  @map("original_price") @db.Decimal(12, 2)
  features         Json
  limitations      Json?
  isPopular        Boolean   @default(false) @map("is_popular")
  isAvailable      Boolean   @default(true) @map("is_available")
  maxCustomers     Int?      @map("max_customers")
  currentCustomers Int       @default(0) @map("current_customers")
  sortOrder        Int       @default(0) @map("sort_order")
  metadata         Json?
  createdAt        DateTime  @default(now()) @map("created_at")
  updatedAt        DateTime  @updatedAt @map("updated_at")
  bookings         Booking[]
  service          Service   @relation(fields: [serviceId], references: [id], onDelete: Cascade)

  @@unique([serviceId, slug])
  @@map("service_tiers")
}

model Booking {
  id                   String          @id @default(cuid())
  bookingNumber        String          @unique @map("booking_number")
  userId               String          @map("user_id")
  serviceTierId        String          @map("service_tier_id")
  status               String          @default("pending")
  paymentStatus        String          @default("pending") @map("payment_status")
  totalAmount          Decimal         @map("total_amount") @db.Decimal(12, 2)
  discountAmount       Decimal         @default(0) @map("discount_amount") @db.Decimal(12, 2)
  finalAmount          Decimal         @map("final_amount") @db.Decimal(12, 2)
  currency             String          @default("VND")
  bookingDetails       Json?           @map("booking_details")
  customerRequirements String?         @map("customer_requirements")
  startDate            DateTime?       @map("start_date")
  endDate              DateTime?       @map("end_date")
  assignedStaffId      String?         @map("assigned_staff_id")
  completionPercentage Int             @default(0) @map("completion_percentage")
  customerRating       Int?            @map("customer_rating")
  customerFeedback     String?         @map("customer_feedback")
  internalNotes        String?         @map("internal_notes")
  createdAt            DateTime        @default(now()) @map("created_at")
  updatedAt            DateTime        @updatedAt @map("updated_at")
  serviceTier          ServiceTier     @relation(fields: [serviceTierId], references: [id])
  user                 User            @relation(fields: [userId], references: [id])
  communications       Communication[]
  convertedLead        Lead?
  payments             Payment[]
  serviceTasks         ServiceTask[]

  @@index([userId, status])
  @@index([status, createdAt])
  @@index([paymentStatus])
  @@index([assignedStaffId, status])
  @@map("bookings")
}

model Payment {
  id                   String    @id @default(cuid())
  bookingId            String    @map("booking_id")
  paymentNumber        String    @unique @map("payment_number")
  amount               Decimal   @db.Decimal(12, 2)
  currency             String    @default("VND")
  paymentMethod        String    @map("payment_method")
  paymentGateway       String    @map("payment_gateway")
  gatewayTransactionId String?   @map("gateway_transaction_id")
  gatewayOrderId       String?   @map("gateway_order_id")
  status               String    @default("pending")
  failureReason        String?   @map("failure_reason")
  gatewayResponse      Json?     @map("gateway_response")
  paidAt               DateTime? @map("paid_at")
  refundedAt           DateTime? @map("refunded_at")
  refundAmount         Decimal   @default(0) @map("refund_amount") @db.Decimal(12, 2)
  refundReason         String?   @map("refund_reason")
  createdAt            DateTime  @default(now()) @map("created_at")
  updatedAt            DateTime  @updatedAt @map("updated_at")
  booking              Booking   @relation(fields: [bookingId], references: [id])

  @@index([bookingId])
  @@index([status])
  @@index([createdAt])
  @@index([paymentGateway, status])
  @@map("payments")
}

model Communication {
  id           String    @id @default(cuid())
  userId       String    @map("user_id")
  bookingId    String?   @map("booking_id")
  type         String
  channel      String?
  subject      String?
  content      String
  templateId   String?   @map("template_id")
  templateData Json?     @map("template_data")
  status       String    @default("pending")
  sentAt       DateTime? @map("sent_at")
  deliveredAt  DateTime? @map("delivered_at")
  readAt       DateTime? @map("read_at")
  errorMessage String?   @map("error_message")
  createdAt    DateTime  @default(now()) @map("created_at")
  booking      Booking?  @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("communications")
}

model Lead {
  id                 String    @id @default(cuid())
  email              String?
  phone              String?
  fullName           String?   @map("full_name")
  serviceInterest    String?   @map("service_interest")
  source             String?
  utmSource          String?   @map("utm_source")
  utmMedium          String?   @map("utm_medium")
  utmCampaign        String?   @map("utm_campaign")
  leadScore          Int       @default(0) @map("lead_score")
  status             String    @default("new")
  assignedTo         String?   @map("assigned_to")
  notes              String?
  convertedAt        DateTime? @map("converted_at")
  convertedBookingId String?   @unique @map("converted_booking_id")
  createdAt          DateTime  @default(now()) @map("created_at")
  updatedAt          DateTime  @updatedAt @map("updated_at")
  assignedUser       User?     @relation(fields: [assignedTo], references: [id])
  convertedBooking   Booking?  @relation(fields: [convertedBookingId], references: [id])

  @@index([status, createdAt])
  @@index([assignedTo, status])
  @@index([source])
  @@index([email])
  @@map("leads")
}

model Staff {
  id              String    @id @default(cuid())
  userId          String    @unique @map("user_id")
  role            String
  permissions     Json?
  specializations Json?
  isActive        Boolean   @default(true) @map("is_active")
  hireDate        DateTime? @map("hire_date")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("staff")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model SystemLog {
  id          String   @id @default(cuid())
  level       String
  message     String
  service     String
  environment String
  context     Json?
  error       Json?
  timestamp   DateTime @default(now())
  createdAt   DateTime @default(now()) @map("created_at")

  @@index([level, timestamp])
  @@index([service, timestamp])
  @@map("system_logs")
}

model SecurityLog {
  id        String   @id @default(cuid())
  event     String
  userId    String?  @map("user_id")
  ip        String?
  userAgent String?  @map("user_agent")
  url       String?
  data      Json?
  timestamp DateTime @default(now())
  createdAt DateTime @default(now()) @map("created_at")

  @@index([event, timestamp])
  @@index([userId, timestamp])
  @@map("security_logs")
}

model AuditLog {
  id         String   @id @default(cuid())
  userId     String   @map("user_id")
  action     String
  resource   String
  resourceId String   @map("resource_id")
  details    Json?
  ip         String?
  userAgent  String?  @map("user_agent")
  timestamp  DateTime @default(now())
  createdAt  DateTime @default(now()) @map("created_at")
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, timestamp])
  @@index([resource, resourceId])
  @@map("audit_logs")
}

model ServiceTask {
  id           String    @id @default(cuid())
  bookingId    String    @map("booking_id")
  type         String
  title        String
  description  String?
  priority     String    @default("medium")
  status       String    @default("pending")
  assignedTo   String?   @map("assigned_to")
  dueDate      DateTime? @map("due_date")
  completedAt  DateTime? @map("completed_at")
  metadata     Json?
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")
  assignedUser User?     @relation(fields: [assignedTo], references: [id])
  booking      Booking   @relation(fields: [bookingId], references: [id], onDelete: Cascade)

  @@index([bookingId, status])
  @@index([assignedTo, status])
  @@map("service_tasks")
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String   @map("user_id")
  createdAt DateTime @default(now()) @map("created_at")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("password_reset_tokens")
}

model TwoFactorAuth {
  id                 String   @id @default(cuid())
  userId             String   @unique @map("user_id")
  secret             String
  enabled            Boolean  @default(false)
  backupCodes        String[] @map("backup_codes")
  lastUsedBackupCode String?  @map("last_used_backup_code")
  createdAt          DateTime @default(now()) @map("created_at")
  updatedAt          DateTime @updatedAt @map("updated_at")
  user               User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("two_factor_auth")
}

model FileUpload {
  id           String   @id @default(cuid())
  key          String   @unique
  filename     String
  mimeType     String   @map("mime_type")
  size         Int
  folder       String
  isPublic     Boolean  @default(false) @map("is_public")
  thumbnailKey String?  @map("thumbnail_key")
  metadata     Json?
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")
  userId       String   @map("user_id")
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, folder])
  @@index([createdAt])
  @@map("file_uploads")
}

model WebhookEvent {
  id            String    @id @default(cuid())
  provider      String
  eventType     String    @map("event_type")
  eventId       String    @unique @map("event_id")
  payload       Json
  status        String    @default("pending")
  attempts      Int       @default(0)
  lastAttemptAt DateTime? @map("last_attempt_at")
  nextRetryAt   DateTime? @map("next_retry_at")
  errorMessage  String?   @map("error_message")
  processedAt   DateTime? @map("processed_at")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  @@index([provider, status])
  @@index([nextRetryAt])
  @@index([eventId])
  @@map("webhook_events")
}

model PasswordHistory {
  id           String   @id @default(cuid())
  userId       String   @map("user_id")
  passwordHash String   @map("password_hash")
  createdAt    DateTime @default(now()) @map("created_at")
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@map("password_history")
}
