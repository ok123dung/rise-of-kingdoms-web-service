          { name: 'S·ªë ti·ªÅn', value: `${payment.amount.toLocaleString()} VNƒê`, inline: true },
          { name: 'Ph∆∞∆°ng th·ª©c', value: payment.payment_method.toUpperCase(), inline: true },
          { name: 'M√£ thanh to√°n', value: payment.payment_number, inline: true },
          { name: 'M√£ booking', value: payment.bookings.booking_number, inline: true },
