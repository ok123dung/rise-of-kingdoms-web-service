      const supportEmbed = new EmbedBuilder()
        .setTitle('üé´ Y√™u c·∫ßu h·ªó tr·ª£ m·ªõi')
        .setColor(0xff9900)
        .addFields(
          {
            name: 'Ng∆∞·ªùi y√™u c·∫ßu',
