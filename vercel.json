{
  "version": 2,
  "framework": "nextjs", 
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "regions": ["sin1"],
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "git": {
    "deploymentEnabled": {
      "main": true,
      "dependabot/**": false
    }
  },
  "crons": [
    {
      "path": "/api/cron/webhooks",
      "schedule": "0 */12 * * *"
    }
  ]
}