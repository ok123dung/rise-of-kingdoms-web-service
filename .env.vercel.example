# Vercel Production Environment Variables
# Copy these to Vercel Dashboard → Settings → Environment Variables

# REQUIRED - Database connection with serverless optimizations
# Format: postgresql://user:pass@host:port/db?pgbouncer=true&connection_limit=1
DATABASE_URL="postgresql://username:password@host:port/database?pgbouncer=true&connection_limit=1&pool_timeout=0"

# REQUIRED - Authentication
NEXTAUTH_URL="https://your-app-name.vercel.app"
NEXTAUTH_SECRET="generate-using-openssl-rand-base64-32"

# OPTIONAL - Discord OAuth (if using Discord login)
DISCORD_CLIENT_ID=""
DISCORD_CLIENT_SECRET=""

# OPTIONAL - Email Service (Resend)
RESEND_API_KEY=""
FROM_EMAIL="noreply@yourdomain.com"

# OPTIONAL - Payment Gateways
MOMO_PARTNER_CODE=""
MOMO_ACCESS_KEY=""
MOMO_SECRET_KEY=""
MOMO_API_ENDPOINT="https://payment.momo.vn"

VNPAY_TMN_CODE=""
VNPAY_HASH_SECRET=""
VNPAY_URL="https://pay.vnpay.vn/vpcpay.html"
VNPAY_RETURN_URL="https://your-app-name.vercel.app/api/payments/vnpay/return"

ZALOPAY_APP_ID=""
ZALOPAY_KEY1=""
ZALOPAY_KEY2=""
ZALOPAY_ENDPOINT="https://openapi.zalopay.vn/v2/create"

# OPTIONAL - Analytics
NEXT_PUBLIC_GA_ID=""

# Site Configuration
NEXT_PUBLIC_SITE_URL="https://your-app-name.vercel.app"

